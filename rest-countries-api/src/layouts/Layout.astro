---
import "../styles/global.css";
import "@fontsource-variable/nunito-sans";

import ThemeHeadScript from "../components/ThemeHeadScript.astro";
import Navigation from "../components/Navigation.astro";

const { pageTitle = "Where in the world?" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<ThemeHeadScript />
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta
			name="description"
			content="Explore data from over 250 countries (population, region, capital, flags) via a free REST API. Filter by region and toggle between light and dark themes."
		/>
	</head>
	<body class="h-full bg-neutral-50 text-black dark:bg-gray-800 dark:text-white">
		<Navigation />
		<slot />
		<footer class="bg-gray-900 py-4 mt-20">
			<div class="container mx-auto text-center text-white">
				Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank" class="footer-link">Frontend Mentor</a>. 
        Coded by <a href="https://www.alansantos.dev.br" target="_blank" class="footer-link">Alan Santos</a>.
			</div>
		</footer>
	</body>
</html>
